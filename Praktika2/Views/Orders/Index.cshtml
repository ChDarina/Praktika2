@model IEnumerable<Praktika2.Models.Orders>
@using Microsoft.AspNet.Identity
@using Praktika2.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers.CustomerNickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Illustrations.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Illustrators.IllustratorNickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commentary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
@if (item.Illustrators.UserId == User.Identity.GetUserId() || item.Customers.UserId == User.Identity.GetUserId())
{
            <td>
                @Html.DisplayFor(modelItem => item.Customers.CustomerNickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Illustrations.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Illustrators.IllustratorNickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commentary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
            </td>
}
        </tr>
    }
    
    </table>
</body>
</html>
